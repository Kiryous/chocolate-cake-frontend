/* Переменные */
:root {
    --gilroy: "Gilroy-Light", Arial, sans-serif;
    --link: rgb(25, 25, 25);
    --hover: rgb(10, 10, 10);
    --visited: rgb(3, 9, 4);
    --pink: #f94084;
}

@font-face {
	font-family: 'Gilroy-Light';
	src: url('../fonts/Gilroy-Light.otf') format('otf');
    /*TODO load woff2, woff, ttf */
	font-style: normal;
	font-weight: 300;
}

@font-face {
	font-family: 'Gilroy';
	src: url('../fonts/Gilroy-ExtraBold.otf') format('otf');
	font-style: normal;
	font-weight: bold;
}


@custom-media --latex-tablet (width <= 1000px);
@custom-media --latex-mobile (width <= 640px);
