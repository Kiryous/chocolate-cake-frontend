.swiper-container {
    width: 100%;
    height: 500px;
}
.swiper-slide {
    /*background: url('../img/news3.jpg') 30% 30% no-repeat;*/
    background-size: contain;
    text-align: center;
    font-size: 18px;

    /* Center slide text vertically */
    display: flex;
    justify-content: center;
    align-items: center;

    transform: scale(0.8);
    transition: .3s;

    &-active {
      transform: scale(1);
    }
}
