.button {
    background: var(--pink);
    color: white;
    text-transform: uppercase;
    box-shadow: 0px 3px 15px rgba(0, 0, 0, 0.2);
    justify-content: center;
    display: inline-block;
    padding: 10px 15px;
    letter-spacing: 1.1px;
    font-size: 20px;
    border-radius: 15px;
    z-index: 10;
    cursor: pointer;
    transition: .3s;            

    &:hover {
        color: var(--pink);
        background: white;
    }
}
