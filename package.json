{
  "name": "chocolate-cake-frontend",
  "version": "0.0.1",
  "repository": {
    "type": "git",
    "url": "https://github.com/kiryous/chocolate-cake-frontend.git"
  },
  "scripts": {
    "start": "node server.js",
    "live": "node ./node_modules/gulp/bin/gulp.js live",
    "external-world": "NODE_ENV=production node ./node_modules/gulp/bin/gulp.js external-world",
    "no-server": "node ./node_modules/gulp/bin/gulp.js no-server",
    "build": "node ./node_modules/gulp/bin/gulp.js",
    "postinstall": "npm start"
  },
  "devDependencies": {
    "browser-sync": "^2.12.3"  
  },
  "dependencies": {
    "express": "^4.15.2",
    "gulp": "^3.9.1",
    "autoprefixer": "^6.3.6",
    "babel-preset-es2015": "^6.18.0",
    "del": "^2.2.2",
    "gulp-babel": "^6.1.2",
    "gulp-cache-bust": "^1.0.2",
    "gulp-cached": "^1.1.0",
    "gulp-concat": "^2.6.0",
    "gulp-cssnano": "^2.1.2",
    "gulp-eslint": "^3.0.1",
    "gulp-imagemin": "^3.1.1",
    "gulp-plumber": "^1.1.0",
    "gulp-postcss": "^6.1.0",
    "gulp-remember": "^0.3.1",
    "gulp-rename": "^1.2.2",
    "gulp-swig": "^0.8.0",
    "gulp-uglify": "^1.5.3",
    "gulp-util": "^3.0.7",
    "path": "^0.12.7",
    "portfinder": "^1.0.3",
    "postcss-cssnext": "^2.5.2",
    "postcss-inline-svg": "^2.1.2",
    "precss": "^1.4.0",
    "stylelint": "^7.6.0",
    "stylelint-config-standard": "^15.0.0"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "rules": {
      "semi": 2
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "indentation": 2
    }
  },
  "engines": {
    "node": "5.5.0",
    "npm": "3.3.12"
  } 
}
